{
    "name": "Study Timer Extension",
    "version": "1.0.0",
    "description": "A simple study timer extension",
    "manifest_version": 3,
    "author": "D4rkisek",

    "content_scripts": [
		{

			"matches": ["<all_urls>"],

			"js": ["popup.js"],
			"default_title": "Study Timer Extension"
		}
	],

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "popup.html",
        "default_title": "Study Timer Extension"
    },

    "permissions": [
		"tabs",
		"activeTab",
		"notifications",
		"storage"
	],
    
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    }
}
